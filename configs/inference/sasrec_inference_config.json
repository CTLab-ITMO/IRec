{
  "experiment_name": "sasrec_sanity_check",
  "dataset": {
    "type": "amazon",
    "path_to_data_dir": "../data/Beauty",
    "dataset_prefix": "Beauty",
    "min_sample_len": 5,
    "max_sample_len": 200,
    "validation_size": 0.1,
    "test_size": 0.1,
    "samplers": {
      "type": "next_item_prediction",
      "negative_sampler": {
        "type": "random",
        "sample_size": 99
      }
    }
  },
  "dataloader": {
    "train": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "amazon"
      },
      "drop_last": true,
      "shuffle": true
    },
    "validation": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "amazon"
      },
      "drop_last": false,
      "shuffle": false
    }
  },
  "model": {
    "type": "feedforward",
    "projector": {
      "type": "basic",
      "embedding_dim": 256,
      "fields": [
        {
          "prefix": "sample",
          "use_layernorm": true,
          "use_position": true
        },
        {
          "prefix": "positive"
        },
        {
          "prefix": "negative"
        },
        {
          "prefix": "candidates"
        }
      ]
    },
    "encoder": {
      "type": "train/test",
      "shared": {
        "type": "sasrec",
        "sample_prefix": "sample",
        "embedding_dim": 256,
        "num_layers": 2,
        "num_heads": 2
      },
      "train": {
        "type": "composite",
        "encoders": [
          {
            "type": "einsum",
            "fst_prefix": "sample",
            "snd_prefix": "positive",
            "mask_prefix": "positive",
            "operation": "bsd,bsd->bs",
            "output_prefix": "positive_scores"
          },
          {
            "type": "einsum",
            "fst_prefix": "sample",
            "snd_prefix": "negative",
            "mask_prefix": "negative",
            "operation": "bsd,bsd->bs",
            "output_prefix": "negative_scores"
          },
          {
            "type": "unmask",
            "prefix": [
              "positive_scores",
              "negative_scores"
            ]
          }
        ]
      },
      "test": {
        "type": "composite",
        "encoders": [
          {
            "type": "last_item",
            "prefix": "sample",
            "output_prefix": "next_item_prediction"
          },
          {
            "type": "einsum",
            "fst_prefix": "next_item_prediction",
            "snd_prefix": "candidates",
            "mask_prefix": "candidates",
            "operation": "bsd,bcd->bc",
            "output_prefix": "logits"
          }
        ]
      }
    },
    "head": {
      "type": "train/test",
      "train": {
        "type": "composite",
        "heads": [
          {
            "type": "bce",
            "predictions_prefix": "positive_scores",
            "labels_prefix": "positive_labels.ids"
          },
          {
            "type": "bce",
            "predictions_prefix": "negative_scores",
            "labels_prefix": "negative_labels.ids"
          }
        ],
        "output_prefix": "loss"
      },
      "test": {
        "type": "identity"
      }
    }
  },
  "metrics": {
    "ndcg@5": {
      "type": "ndcg",
      "k": 5
    },
    "ndcg@10": {
      "type": "ndcg",
      "k": 10
    },
    "ndcg@20": {
      "type": "ndcg",
      "k": 20
    },
    "recall@5": {
      "type": "recall",
      "k": 5
    },
    "recall@10": {
      "type": "recall",
      "k": 10
    },
    "recall@20": {
      "type": "recall",
      "k": 20
    }
  },
  "pred_prefix": "logits",
  "labels_prefix": "labels"
}
