{
  "dataset": {
    "type": "amazon",
    "path_to_data_dir": "../data/Beauty",
    "dataset_prefix": "Beauty",
    "min_sample_len": 5,
    "max_sample_len": 200,
    "validation_size": 0.1,
    "test_size": 0.1,
    "samplers": {
      "type": "next_item_prediction",
      "negative_sampler": {
        "type": "random",
        "sample_size": 99
      }
    }
  },
  "dataloader": {
    "train": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "amazon"
      },
      "drop_last": true,
      "shuffle": true
    },
    "validation": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "amazon"
      },
      "drop_last": false,
      "shuffle": false
    }
  },
  "model": {
    "type": "sample",
    "sequence_prefix": "sample.ids",
    "sampler_type": "random",
    "output_prefix": "scores"
  },
  "callback": {
    "type": "composite",
    "callbacks": [
      {
        "type": "validation",
        "on_step": 1,
        "pred_prefix": "scores",
        "labels_prefix": "labels",
        "metrics": {
          "ndcg@5": {
            "type": "ndcg",
            "k": 5
          },
          "recall@5": {
            "type": "recall",
            "k": 5
          }
        }
      }
    ]
  }
}
