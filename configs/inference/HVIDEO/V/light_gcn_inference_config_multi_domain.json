{
  "pred_prefix": "predictions",
  "label_prefix": "labels",
  "experiment_name": "light_gcn_inference_HVIDEO_V",
  "dataset": {
    "type": "graph",
    "graph_dir_path": "../data/HVIDEO/V",
    "dataset": {
      "type": "multi_domain_scientific",
	  "path_to_data_dir": "../data",
	  "name": "HVIDEO",
	  "target_domain": "V",
	  "other_domains": ["E"],
      "max_sequence_length": 50,
      "samplers": {
        "num_negatives_eval": 100,
        "type": "multi_domain_next_item_prediction",
        "negative_sampler_type": "random"
      }
    }
  },
  "dataloader": {
    "train": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": true,
      "shuffle": true
    },
    "validation": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": false,
      "shuffle": false
    }
  },
  "model": {
    "type": "light_gcn",
    "user_prefix": "user",
    "positive_prefix": "positive",
    "negative_prefix": "negative",
    "candidate_prefix": "candidates",
    "embedding_dim": 64,
    "num_layers": 3,
    "keep_prob": 1.0,
    "dropout": 0.0,
    "initializer_range": 0.02
  },
  "metrics": {
    "ndcg@5": {
      "type": "ndcg",
      "k": 5
    },
    "ndcg@10": {
      "type": "ndcg",
      "k": 10
    },
    "ndcg@20": {
      "type": "ndcg",
      "k": 20
    },
    "recall@5": {
      "type": "recall",
      "k": 5
    },
    "recall@10": {
      "type": "recall",
      "k": 10
    },
    "recall@20": {
      "type": "recall",
      "k": 20
    }
  }
}