{
  "experiment_name": "bert4rec_sanity_check",
  "dataset": {
    "type": "scientific",
    "path_to_data_dir": "./drive/MyDrive/Science/Multidomain RecSys/source/iz-dev/data/AliAd",
    "dataset_prefix": "d4",
    "min_sample_len": 5,
    "max_sample_len": 200,
    "validation_size": 0.1,
    "test_size": 0.1,
    "samplers": {
      "type": "masked_item_prediction",
      "mask_prob": 0.4,
      "negative_sampler": {
        "type": "random",
        "sample_size": 99
      }
    }
  },
  "dataloader": {
    "train": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "amazon"
      },
      "drop_last": true,
      "shuffle": true
    },
    "validation": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "amazon"
      },
      "drop_last": false,
      "shuffle": false
    }
  },
  "model": {
    "type": "feedforward",
    "projector": {
      "type": "basic",
      "embedding_dim": 256,
      "fields": [
        {
          "prefix": "sample",
          "use_layernorm": true,
          "use_position": true
        }
      ]
    },
    "encoders": [
      {
        "type": "bert4rec",
        "prefix": "sample",
        "num_layers": 2,
        "num_heads": 2,
        "embedding_dim": 256,
        "output_dim": 12102,
        "output_prefix": "logits"
      },
      {
        "type": "train/test",
        "train": {
          "type": "composite",
          "encoders": [
            {
              "type": "unmask",
              "prefix": "logits"
            },
            {
              "type": "filter",
              "logits_prefix": "logits",
              "labels_prefix": "labels"
            }
          ]
        },
        "test": {
          "type": "composite",
          "encoders": [
            {
              "type": "last_item",
              "prefix": "logits",
              "output_prefix": "next_item_prediction"
            },
            {
              "type": "gather",
              "prefix": "next_item_prediction",
              "candidate_prefix": "candidates",
              "output_prefix": "logits"
            }
          ]
        }
      }
    ]
  },
  "metrics": {
    "ndcg@5": {
      "type": "ndcg",
      "k": 5
    },
    "ndcg@10": {
      "type": "ndcg",
      "k": 10
    },
    "ndcg@20": {
      "type": "ndcg",
      "k": 20
    },
    "recall@5": {
      "type": "recall",
      "k": 5
    },
    "recall@10": {
      "type": "recall",
      "k": 10
    },
    "recall@20": {
      "type": "recall",
      "k": 20
    }
  },
  "pred_prefix": "logits",
  "labels_prefix": "labels"
}
