{
  "experiment_name": "duorec_beauty_test",
  "train_epochs_num": 10,
  "dataset": {
    "type": "duorec",
    "dataset": {
      "type": "sequence",
      "path_to_data_dir": "../data",
      "name": "Beauty",
      "max_sequence_length": 200,
      "samplers": {
        "num_negatives_eval": 100,
        "type": "duorec",
        "negative_sampler_type": "random"
      }
    }
  },
  "dataloader": {
    "train": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": true,
      "shuffle": true
    },
    "validation": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": false,
      "shuffle": false
    }
  },
  "model": {
    "type": "duorec",
    "sequence_prefix": "item",
    "augmented_sequence_prefix": "semantic_similar_item",
    "candidate_prefix": "candidates",
    "num_layers": 2,
    "num_heads": 2,
    "embedding_dim": 256,
    "dim_feedforward": 1024,
    "dropout": 0.0,
    "activation": "relu",
    "layer_norm_eps": 1e-5,
    "initializer_range": 0.02
  },
  "optimizer": {
    "type": "basic",
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    }
  },
  "loss": {
    "type": "composite",
    "losses": [
      {
        "type": "ce",
        "predictions_prefix": "next_item_logits",
        "labels_prefix": "positive",
        "weight": 1.0,
        "output_prefix": "cross_entropy"
      },
      {
        "type": "duorec_ssl",
        "fst_embeddings_prefix": "sequence_representation",
        "snd_embeddings_prefix": "another_sequence_representation",
        "weight": 1.0,
        "output_prefix": "duorec_ssl_droupout"
      },
      {
        "type": "duorec_ssl",
        "fst_embeddings_prefix": "sequence_representation",
        "snd_embeddings_prefix": "augmented_sequence_representation",
        "weight": 1.0,
        "output_prefix": "duorec_ssl_augmented"
      }
    ],
    "output_prefix": "loss"
  },
  "callback": {
    "type": "composite",
    "callbacks": [
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "loss"
      },
      {
        "type": "validation",
        "on_step": 256,
        "pred_prefix": "logits",
        "labels_prefix": "labels",
        "metrics": {
          "ndcg@5": {
            "type": "ndcg",
            "k": 5
          },
          "ndcg@10": {
            "type": "ndcg",
            "k": 10
          },
          "ndcg@20": {
            "type": "ndcg",
            "k": 20
          },
          "recall@5": {
            "type": "recall",
            "k": 5
          },
          "recall@10": {
            "type": "recall",
            "k": 10
          },
          "recall@20": {
            "type": "recall",
            "k": 20
          }
        }
      }
    ]
  }
}
