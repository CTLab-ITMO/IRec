{
  "experiment_name": "rqvae_beauty",
  "best_metric": "eval/ndcg@20",
  "dataset": {
    "type": "rqvae",
    "path_to_data_dir": "../data",
    "name": "Beauty",
    "samplers": {
      "type": "identity"
    }
  },
  "dataloader": {
    "train": {
      "type": "torch",
      "batch_size": 128,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": false,
      "shuffle": true
    },
    "validation": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": false,
      "shuffle": false
    }
  },
  "model": {
    "type": "rqvae",
    "user_prefix": "user",
    "sequence_prefix": "item",
    "labels_prefix": "labels",
    "candidate_prefix": "candidates",
    "embedding_dim": 64,
    "num_heads": 2,
    "num_layers": 2,
    "dim_feedforward": 256,
    "dropout": 0.2,
    "activation": "gelu",
    "layer_norm_eps": 1e-9,
    "initializer_range": 0.02
  },
  "optimizer": {
    "type": "basic",
    "optimizer": {
      "type": "adam",
      "lr": 1e-4
    },
    "clip_grad_threshold": 5.0
  },
  "loss": {
    "type": "composite",
    "losses": [
      {
        "type": "ce",
        "predictions_prefix": "logits",
        "labels_prefix": "labels",
        "output_prefix": "downstream_loss",
        "weight": 1.0
      }
    ],
    "output_prefix": "loss"
  },
  "callback": {
    "type": "composite",
    "callbacks": [
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "loss"
      }
    ]
  }
}
