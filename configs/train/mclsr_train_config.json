{
  "experiment_name": "bert4rec_w_user2item_graph_0.0001",
  "train_epochs_num": 20,
  "dataset": {
    "type": "graph",
    "use_user_graph": false,
    "use_item_graph": false,
    "graph_dir_path": "../data/Beauty",
    "dataset": {
      "type": "scientific",
      "path_to_data_dir": "../data",
      "name": "Beauty",
      "sample_length_threshold": 5,
      "max_sequence_length": 200,
      "samplers": {
        "type": "masked_item_prediction",
        "mask_prob": 0.4,
        "negative_sampler_type": "random"
      }
    }
  },
  "dataloader": {
    "train": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": true,
      "shuffle": true
    },
    "validation": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": false,
      "shuffle": false
    }
  },
  "model": {
    "type": "bert4rec_mclsr",
    "sequence_prefix": "item",
    "labels_prefix": "labels",
    "user_prefix": "user",
    "candidate_prefix": "candidates",
    "embedding_dim": 256,
    "num_encoder_heads": 2,
    "num_encoder_layers": 2,
    "dim_feedforward": 1024,
    "num_graph_layers": 3,
    "encoder_dropout": 0.0,
    "activation": "relu",
    "layer_norm_eps": 1e-5,
    "keep_prob": 1.0,
    "graph_dropout": 0.0,
    "initializer_range": 0.02,
    "alpha": 1.0
  },
  "optimizer": {
    "type": "basic",
    "optimizer": {
      "type": "adamw",
      "lr": 3e-4,
      "eps": 1e-8
    },
    "clip_grad_threshold": 5.0
  },
  "loss": {
    "type": "composite",
    "losses": [
      {
        "type": "ce",
        "predictions_prefix": "logits",
        "labels_prefix": "labels",
        "output_prefix": "loss"
      },
      {
        "type": "fps",
        "fst_embeddings_prefix": "global_interest_embeddings",
        "snd_embeddings_prefix": "current_interest_embeddings",
        "output_prefix": "interest_level_contrastive",
        "weight": 0.0001
      }
    ],
    "output_prefix": "loss"
  },
  "callback": {
    "type": "composite",
    "callbacks": [
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "loss"
      },
      {
        "type": "validation",
        "on_step": 32,
        "pred_prefix": "logits",
        "labels_prefix": "labels",
        "metrics": {
          "ndcg@5": {
            "type": "ndcg",
            "k": 5
          },
          "ndcg@10": {
            "type": "ndcg",
            "k": 10
          },
          "ndcg@20": {
            "type": "ndcg",
            "k": 20
          },
          "recall@5": {
            "type": "recall",
            "k": 5
          },
          "recall@10": {
            "type": "recall",
            "k": 10
          },
          "recall@20": {
            "type": "recall",
            "k": 20
          }
        }
      }
    ]
  }
}
