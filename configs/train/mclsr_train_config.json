{
  "experiment_name": "mclsr_gowalla_basic",
  "train_epochs_num": 100,
  "dataset": {
    "type": "graph",
    "use_user_graph": true,
    "use_item_graph": true,
    "dataset": {
      "type": "sequence",
      "name": "Gowalla",
      "max_sequence_length": 200,
      "path_to_data_dir": "../data",
      "samplers": {
        "type": "pos_neg",
        "negative_sampler_type": "random"
      }
    }
  },
  "dataloader": {
    "train": {
      "type": "torch",
      "batch_size": 2048,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": true,
      "shuffle": true
    },
    "validation": {
      "type": "torch",
      "batch_size": 2048,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": false,
      "shuffle": false
    }
  },
  "model": {
    "type": "mclsr",
    "sequence_prefix": "item",
    "user_prefix": "user",
    "candidates_prefix": "candidates",
    "embedding_dim": 256,
    "num_encoder_heads": 2,
    "num_encoder_layers": 2,
    "num_graph_layers": 3,
    "dim_feedforward": 1024,
    "encoder_dropout": 0.0,
    "activation": "relu",
    "layer_norm_eps": 1e-5,
    "keep_prob": 1.0,
    "graph_dropout": 0.0,
    "initializer_range": 0.02
  },
  "optimizer": {
    "type": "basic",
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    }
  },
  "loss": {
    "type": "composite",
    "losses": [
      {
        "type": "fps",
        "logits_prefix": "logits",
        "labels_prefix": "labels.ids",
        "output_prefix": "fps_loss",
        "weight": 1.0
      }
    ],
    "output_prefix": "loss"
  },
  "callback": {
    "type": "composite",
    "callbacks": [
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "loss"
      },
      {
        "type": "validation",
        "on_step": 32,
        "pred_prefix": "logits",
        "labels_prefix": "labels",
        "metrics": {
          "ndcg@5": {
            "type": "ndcg",
            "k": 5
          },
          "ndcg@10": {
            "type": "ndcg",
            "k": 10
          },
          "ndcg@20": {
            "type": "ndcg",
            "k": 20
          },
          "recall@5": {
            "type": "recall",
            "k": 5
          },
          "recall@10": {
            "type": "recall",
            "k": 10
          },
          "recall@20": {
            "type": "recall",
            "k": 20
          }
        }
      }
    ]
  }
}
