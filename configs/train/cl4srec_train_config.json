{
  "experiment_name": "cl4srec_beauty_test",
  "train_epochs_num": 1,
  "dataset": {
    "type": "sequence",
    "path_to_data_dir": "../data",
    "name": "Beauty",
    "max_sequence_length": 50,
    "samplers": {
      "num_negatives_eval": 100,
      "type": "cl4srec",
      "negative_sampler_type": "random",
      "item_crop_portion": 0.5,
      "item_mask_portion": 0.5,
      "item_reorder_portion": 0.5
    }
  },
  "dataloader": {
    "train": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": true,
      "shuffle": true
    },
    "validation": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": false,
      "shuffle": false
    }
  },
  "model": {
    "type": "cl4srec",
    "sequence_prefix": "item",
    "fst_augmented_sequence_prefix": "fst_augmented_item",
    "snd_augmented_sequence_prefix": "snd_augmented_item",
    "labels_prefix": "target",
    "candidate_prefix": "candidates",
    "embedding_dim": 64,
    "num_heads": 2,
    "num_layers": 2,
    "dim_feedforward": 256,
    "dropout": 0.0,
    "activation": "relu",
    "layer_norm_eps": 1e-5,
    "initializer_range": 0.02
  },
  "optimizer": {
    "type": "basic",
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    }
  },
  "loss": {
    "type": "composite",
    "losses": [
      {
        "type": "fps",
        "fst_embeddings_prefix": "sequence_representation",
        "snd_embeddings_prefix": "labels_representation",
        "tau": 1.0,
        "weight": 1.0,
        "add_negatives": true,
        "output_prefix": "downstream_loss"
      },
      {
        "type": "fps",
        "fst_embeddings_prefix": "fst_aug_sequence_representation",
        "snd_embeddings_prefix": "snd_aug_sequence_representation",
        "tau": 1.0,
        "weight": 0.05,
        "add_negatives": true,
        "output_prefix": "contrastive_loss"
      }
    ],
    "output_prefix": "loss"
  },
  "callback": {
    "type": "composite",
    "callbacks": [
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "loss"
      },
      {
        "type": "validation",
        "on_step": 64,
        "pred_prefix": "logits",
        "labels_prefix": "labels",
        "metrics": {
          "ndcg@5": {
            "type": "ndcg",
            "k": 5
          },
          "ndcg@10": {
            "type": "ndcg",
            "k": 10
          },
          "ndcg@20": {
            "type": "ndcg",
            "k": 20
          },
          "recall@5": {
            "type": "recall",
            "k": 5
          },
          "recall@10": {
            "type": "recall",
            "k": 10
          },
          "recall@20": {
            "type": "recall",
            "k": 20
          }
        }
      },
      {
        "type": "eval",
        "on_step": 256,
        "pred_prefix": "logits",
        "labels_prefix": "labels",
        "metrics": {
          "ndcg@5": {
            "type": "ndcg",
            "k": 5
          },
          "ndcg@10": {
            "type": "ndcg",
            "k": 10
          },
          "ndcg@20": {
            "type": "ndcg",
            "k": 20
          },
          "recall@5": {
            "type": "recall",
            "k": 5
          },
          "recall@10": {
            "type": "recall",
            "k": 10
          },
          "recall@20": {
            "type": "recall",
            "k": 20
          }
        }
      }
    ]
  }
}
