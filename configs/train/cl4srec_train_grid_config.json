{
  "start_from": 0,
  "num_exps": 60,
  "experiment_name": "cl4srec_beauty_grid",
  "train_epochs_num": 20,
  "dataset": {
    "type": "sequence",
    "path_to_data_dir": "../data",
    "name": "Beauty",
    "max_sequence_length": 50,
    "samplers": {
      "num_negatives_eval": 100,
      "type": "cl4srec",
      "negative_sampler_type": "random"
    }
  },
  "dataset_params": {
    "samplers": {
      "item_crop_portion": [0.3, 0.5, 0.7],
      "item_mask_portion": [0.1, 0.3, 0.5, 0.7],
      "item_reorder_portion": [0.1, 0.3, 0.5, 0.7]
    }
  },
  "dataloader": {
    "train": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": true,
      "shuffle": true
    },
    "validation": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": false,
      "shuffle": false
    }
  },
  "model": {
    "type": "cl4srec",
    "sequence_prefix": "item",
    "fst_augmented_sequence_prefix": "fst_augmented_item",
    "snd_augmented_sequence_prefix": "snd_augmented_item",
    "labels_prefix": "target",
    "candidate_prefix": "candidates",
    "num_layers": 2,
    "num_heads": 2,
    "embedding_dim": 64,
    "dim_feedforward": 256,
    "activation": "relu",
    "layer_norm_eps": 1e-5
  },
  "model_params": {
    "dropout": [0.0, 0.1, 0.2],
    "initializer_range": [0.01, 0.02, 0.05]
  },
  "optimizer": {
    "type": "basic",
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    }
  },
  "optimizer_params": {
    "optimizer": {
      "lr": [0.001, 0.003, 0.005]
    }
  },
  "loss": {
    "type": "composite",
    "losses": [
      {
        "type": "fps",
        "fst_embeddings_prefix": "sequence_representation",
        "snd_embeddings_prefix": "labels_representation",
        "tau": 1.0,
        "output_prefix": "downstream_loss"
      },
      {
        "type": "fps",
        "fst_embeddings_prefix": "fst_aug_sequence_representation",
        "snd_embeddings_prefix": "snd_aug_sequence_representation",
        "tau": 1.0,
        "output_prefix": "contrastive_loss"
      }
    ],
    "output_prefix": "loss"
  },
  "loss_params": {
    "losses": [
      {},
      {"weight": [0.01, 0.05, 0.1, 0.5]}
    ]
  },
  "callback": {
    "type": "composite",
    "callbacks": [
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "loss"
      },
      {
        "type": "validation",
        "on_step": 256,
        "pred_prefix": "logits",
        "labels_prefix": "labels",
        "metrics": {
          "ndcg@5": {
            "type": "ndcg",
            "k": 5
          },
          "ndcg@10": {
            "type": "ndcg",
            "k": 10
          },
          "ndcg@20": {
            "type": "ndcg",
            "k": 20
          },
          "recall@5": {
            "type": "recall",
            "k": 5
          },
          "recall@10": {
            "type": "recall",
            "k": 10
          },
          "recall@20": {
            "type": "recall",
            "k": 20
          }
        }
      }
    ]
  }
}
