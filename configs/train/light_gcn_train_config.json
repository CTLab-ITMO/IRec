{
  "experiment_name": "light_gcn_gowalla_basic",
  "train_epochs_num": 1000,
  "dataset": {
    "type": "graph",
    "dataset": {
      "type": "interactions",
      "name": "Gowalla",
      "path_to_data_dir": "../data",
      "samplers": {
        "type": "pos_neg",
        "negative_sampler_type": "random"
      }
    }
  },
  "dataloader": {
    "train": {
      "type": "torch",
      "batch_size": 2048,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": true,
      "shuffle": true
    },
    "validation": {
      "type": "torch",
      "batch_size": 2048,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": false,
      "shuffle": false
    }
  },
  "model": {
    "type": "light_gcn",
    "user_prefix": "user",
    "positive_prefix": "positive",
    "negative_prefix": "negative",
    "candidates_prefix": "candidates",
    "embedding_dim": 256,
    "num_layers": 3,
    "keep_prob": 1.0,
    "dropout": 0.0,
    "initializer_range": 0.02
  },
  "optimizer": {
    "type": "basic",
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    }
  },
  "loss": {
    "type": "composite",
    "losses": [
      {
        "type": "bpr",
        "positive_prefix": "positive_scores",
        "negative_prefix": "negative_scores",
        "output_prefix": "bpr_loss",
        "weight": 1.0
      }
    ],
    "output_prefix": "loss"
  },
  "callback": {
    "type": "composite",
    "callbacks": [
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "loss"
      },
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "bpr_loss"
      },
      {
        "type": "validation",
        "on_step": 32,
        "pred_prefix": "logits",
        "labels_prefix": "labels",
        "metrics": {
          "ndcg@5": {
            "type": "ndcg",
            "k": 5
          },
          "ndcg@10": {
            "type": "ndcg",
            "k": 10
          },
          "ndcg@20": {
            "type": "ndcg",
            "k": 20
          },
          "recall@5": {
            "type": "recall",
            "k": 5
          },
          "recall@10": {
            "type": "recall",
            "k": 10
          },
          "recall@20": {
            "type": "recall",
            "k": 20
          }
        }
      }
    ]
  }
}
