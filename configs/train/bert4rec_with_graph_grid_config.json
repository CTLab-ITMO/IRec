{
  "start_from": 0,
  "num_exps": 100,
  "experiment_name": "bert4rec_with_graph_ml_test",
  "best_metric": "eval/ndcg@20",
  "dataset": {
    "type": "graph",
    "use_user_graph": true,
    "use_item_graph": true,
    "graph_dir_path": "../data/MovieLens1M",
    "dataset": {
      "type": "scientific",
      "path_to_data_dir": "../data",
      "name": "MovieLens1M",
      "max_sequence_length": 50,
      "samplers": {
        "mask_prob": 0.3,
        "num_negatives_eval": 100,
        "type": "masked_item_prediction",
        "negative_sampler_type": "random"
      }
    }
  },
  "dataset_params": {
  },
  "dataloader": {
    "train": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": true,
      "shuffle": true
    },
    "validation": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": false,
      "shuffle": false
    }
  },
  "model": {
    "type": "bert4rec_mclsr",
    "sequence_prefix": "item",
    "labels_prefix": "labels",
    "user_prefix": "user",
    "candidate_prefix": "candidates",
    "embedding_dim": 64,
    "num_heads": 2,
    "num_layers": 2,
    "dim_feedforward": 256,
    "dropout": 0.1,
    "activation": "gelu",
    "layer_norm_eps": 1e-9,
    "initializer_range": 0.02
  },
  "model_params": {
    "num_graph_layers": [
      1,
      2,
      3],
    "graph_dropout": [
      0.0,
      0.2,
      0.4,
      0.6,
      0.8],
    "alpha": [
      0.1,
      0.2,
      0.5,
      0.7,
      0.9]
  },
  "optimizer": {
    "type": "basic",
    "optimizer": {
      "type": "adam",
      "lr": 1e-4
    }
  },
  "optimizer_params": {
  },
  "loss": {
    "type": "composite",
    "losses": [
      {
        "type": "ce",
        "predictions_prefix": "logits",
        "labels_prefix": "labels",
        "output_prefix": "bert4rec_mclsr_downstream_loss"
      },
      {
        "type": "fps",
        "fst_embeddings_prefix": "sequential_representation",
        "snd_embeddings_prefix": "graph_representation",
        "output_prefix": "bert4rec_mclsr_contrastive_interest_loss",
        "use_mean": true
      },
      {
        "type": "fps",
        "fst_embeddings_prefix": "user_graph_user_embeddings",
        "snd_embeddings_prefix": "common_graph_user_embeddings",
        "output_prefix": "bert4rec_mclsr_contrastive_user_feature_loss",
        "use_mean": true
      },
      {
        "type": "fps",
        "fst_embeddings_prefix": "item_graph_item_embeddings",
        "snd_embeddings_prefix": "common_graph_item_embeddings",
        "output_prefix": "bert4rec_mclsr_contrastive_item_feature_loss",
        "use_mean": true
      }
    ],
    "output_prefix": "bert4rec_mclsr_loss"
  },
  "loss_params": {
    "losses": [
      {
      },
      {
        "weight": [
          0.01,
          0.05,
          0.1]
      },
      {
        "weight": [
          0.01,
          0.05,
          0.1]
      },
      {
        "weight": [
          0.01,
          0.05,
          0.1]
      }
    ]
  },
  "callback": {
    "type": "composite",
    "callbacks": [
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "bert4rec_mclsr_loss"
      },
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "bert4rec_mclsr_downstream_loss"
      },
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "bert4rec_mclsr_contrastive_interest_loss"
      },
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "bert4rec_mclsr_contrastive_user_feature_loss"
      },
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "bert4rec_mclsr_contrastive_item_feature_loss"
      },
      {
        "type": "validation",
        "on_step": 64,
        "pred_prefix": "logits",
        "labels_prefix": "labels",
        "metrics": {
          "ndcg@5": {
            "type": "ndcg",
            "k": 5
          },
          "ndcg@10": {
            "type": "ndcg",
            "k": 10
          },
          "ndcg@20": {
            "type": "ndcg",
            "k": 20
          },
          "recall@5": {
            "type": "recall",
            "k": 5
          },
          "recall@10": {
            "type": "recall",
            "k": 10
          },
          "recall@20": {
            "type": "recall",
            "k": 20
          }
        }
      },
      {
        "type": "eval",
        "on_step": 256,
        "pred_prefix": "logits",
        "labels_prefix": "labels",
        "metrics": {
          "ndcg@5": {
            "type": "ndcg",
            "k": 5
          },
          "ndcg@10": {
            "type": "ndcg",
            "k": 10
          },
          "ndcg@20": {
            "type": "ndcg",
            "k": 20
          },
          "recall@5": {
            "type": "recall",
            "k": 5
          },
          "recall@10": {
            "type": "recall",
            "k": 10
          },
          "recall@20": {
            "type": "recall",
            "k": 20
          }
        }
      }
    ]
  }
}
