{
  "experiment_name": "sasrec_beauty_grid",
  "train_epochs_num": 20,
  "dataset": {
    "type": "sequence",
    "path_to_data_dir": "../data",
    "name": "Beauty",
    "samplers": {
      "num_negatives_train": 100,
      "num_negatives_eval": 100,
      "type": "next_item_prediction",
      "negative_sampler_type": "random"
    }
  },
  "dataset_params": {
    "max_sequence_length": [100, 200, 300],
    "samplers": {
      "num_negatives_train": [50, 100, 200]
    }
  },
  "dataloader": {
    "train": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": true,
      "shuffle": true
    },
    "validation": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": false,
      "shuffle": false
    }
  },
  "model": {
    "type": "sasrec",
    "sequence_prefix": "item",
    "labels_prefix": "labels",
    "positive_prefix": "positive",
    "negative_prefix": "negative",
    "candidate_prefix": "candidates"
  },
  "model_params": {
    "embedding_dim": [128, 256, 512],
    "num_heads": [2, 4, 8],
    "num_layers": [2, 3, 4],
    "dim_feedforward": [256, 512, 1024, 2048],
    "dropout": [0.0, 0.1, 0.25],
    "initializer_range": [0.02, 0.05, 0.1, 0.5]
  },
  "optimizer": {
    "type": "basic",
    "optimizer": {
      "type": "adam"
    }
  },
  "optimizer_params": {
    "optimizer": {
      "lr": [0.001, 0.01, 0.1]
    }
  },
  "loss": {
    "type": "composite",
    "losses": [
      {
        "type": "bce",
        "predictions_prefix": "positive_scores",
        "labels_prefix": "positive_labels.ids"
      },
      {
        "type": "bce",
        "predictions_prefix": "negative_scores",
        "labels_prefix": "negative_labels.ids"
      }
    ],
    "output_prefix": "loss"
  },
  "loss_params": {

  },
  "callback": {
    "type": "composite",
    "callbacks": [
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "loss"
      },
      {
        "type": "validation",
        "on_step": 32,
        "pred_prefix": "logits",
        "labels_prefix": "labels",
        "metrics": {
          "ndcg@5": {
            "type": "ndcg",
            "k": 5
          },
          "ndcg@10": {
            "type": "ndcg",
            "k": 10
          },
          "ndcg@20": {
            "type": "ndcg",
            "k": 20
          },
          "recall@5": {
            "type": "recall",
            "k": 5
          },
          "recall@10": {
            "type": "recall",
            "k": 10
          },
          "recall@20": {
            "type": "recall",
            "k": 20
          }
        }
      }
    ]
  }
}
