{
  "experiment_name": "bert4rec_beauty",
  "train_epochs_num": 20,
  "dataset": {
    "type": "sequence",
    "path_to_data_dir": "../data",
    "name": "Beauty",
    "max_sequence_length": 200,
    "samplers": {
      "type": "masked_item_prediction",
      "mask_prob": 0.3,
      "negative_sampler_type": "random"
    }
  },
  "dataloader": {
    "train": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": true,
      "shuffle": true
    },
    "validation": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": false,
      "shuffle": false
    }
  },
  "model": {
    "type": "bert4rec",
    "sequence_prefix": "item",
    "labels_prefix": "labels",
    "candidate_prefix": "candidates",
    "embedding_dim": 256,
    "num_heads": 2,
    "num_layers": 2,
    "dim_feedforward": 1024,
    "dropout": 0.0,
    "activation": "relu",
    "layer_norm_eps": 1e-5,
    "initializer_range": 0.02
  },
  "optimizer": {
    "type": "basic",
    "optimizer": {
      "type": "adamw",
      "lr": 3e-4,
      "eps": 1e-8
    },
    "clip_grad_threshold": 5.0
  },
  "loss": {
    "type": "composite",
    "losses": [
      {
        "type": "ce",
        "predictions_prefix": "logits",
        "labels_prefix": "labels",
        "output_prefix": "loss"
      }
    ],
    "output_prefix": "loss"
  },
  "callback": {
    "type": "composite",
    "callbacks": [
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "loss"
      },
      {
        "type": "validation",
        "on_step": 128,
        "pred_prefix": "logits",
        "labels_prefix": "labels",
        "metrics": {
          "ndcg@5": {
            "type": "ndcg",
            "k": 5
          },
          "ndcg@10": {
            "type": "ndcg",
            "k": 10
          },
          "ndcg@20": {
            "type": "ndcg",
            "k": 20
          },
          "recall@5": {
            "type": "recall",
            "k": 5
          },
          "recall@10": {
            "type": "recall",
            "k": 10
          },
          "recall@20": {
            "type": "recall",
            "k": 20
          }
        }
      }
    ]
  }
}
