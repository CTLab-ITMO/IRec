{
  "experiment_name": "bert4rec_beauty",
  "train_epochs_num": 15,
  "dataset": {
    "type": "sequence",
    "path_to_data_dir": "../data",
    "name": "Beauty",
    "max_sequence_length": 200,
    "samplers": {
      "type": "masked_item_prediction",
      "negative_sampler_type": "random"
    }
  },
  "dataset_params": {
    "samplers": {
      "mask_prob": [0.0, 0.2, 0.4]
    }
  },
  "dataloader": {
    "train": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": true,
      "shuffle": true
    },
    "validation": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": false,
      "shuffle": false
    }
  },
  "model": {
    "type": "bert4rec",
    "sequence_prefix": "item",
    "labels_prefix": "labels",
    "candidate_prefix": "candidates",
    "activation": "relu"
  },
  "model_params": {
    "embedding_dim": [128, 256, 512],
    "num_heads": [2, 4],
    "num_layers": [1, 2, 3],
    "dim_feedforward": [512, 1024],
    "dropout": [0.0, 0.1, 0.2],
    "initializer_range": [0.01, 0.02, 0.05],
    "layer_norm_eps": [1e-12, 1e-5]
  },
  "optimizer": {
    "type": "basic",
    "optimizer": {
      "type": "adamw",
      "eps": 1e-8
    }
  },
  "optimizer_params": {
    "optimizer": {
      "lr": [0.001, 0.005]
    },
    "clip_grad_threshold": [5.0, 100.0]
  },
  "loss": {
    "type": "composite",
    "losses": [
      {
        "type": "ce",
        "predictions_prefix": "logits",
        "labels_prefix": "labels",
        "output_prefix": "loss"
      }
    ],
    "output_prefix": "loss"
  },
  "loss_params": {

  },
  "callback": {
    "type": "composite",
    "callbacks": [
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "loss"
      },
      {
        "type": "validation",
        "on_step": 128,
        "pred_prefix": "logits",
        "labels_prefix": "labels",
        "metrics": {
          "ndcg@5": {
            "type": "ndcg",
            "k": 5
          },
          "ndcg@10": {
            "type": "ndcg",
            "k": 10
          },
          "ndcg@20": {
            "type": "ndcg",
            "k": 20
          },
          "recall@5": {
            "type": "recall",
            "k": 5
          },
          "recall@10": {
            "type": "recall",
            "k": 10
          },
          "recall@20": {
            "type": "recall",
            "k": 20
          }
        }
      }
    ]
  }
}
