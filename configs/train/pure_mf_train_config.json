{
  "experiment_name": "pure_mf_sanity_check",
  "train_epochs_num": 100,
  "dataset": {
    "type": "interactions",
    "name": "Gowalla",
    "path_to_data_dir": "../data",
    "samplers": {
      "type": "pos_neg",
      "negative_sampler": {
        "type": "random",
        "sample_size": 99
      }
    }
  },
  "dataloader": {
    "train": {
      "type": "torch",
      "batch_size": 512,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": true,
      "shuffle": true
    },
    "validation": {
      "type": "torch",
      "batch_size": 512,
      "batch_processor": {
        "type": "basic"
      },
      "drop_last": false,
      "shuffle": false
    }
  },
  "model": {
    "type": "feedforward",
    "projector": {
      "type": "basic",
      "embedding_dim": 256,
      "fields": [
        {
          "type": "user",
          "prefix": "user"
        },
        {
          "type": "item",
          "prefix": "positive"
        },
        {
          "type": "item",
          "prefix": "negative"
        },
        {
          "type": "item",
          "prefix": "candidates"
        }
      ]
    },
    "encoders": [
      {
        "type": "train/test",
        "train": {
          "type": "composite",
          "encoders": [
            {
              "type": "einsum",
              "fst_prefix": "user",
              "snd_prefix": "positive",
              "operation": "bud,bpd->bp",
              "mask_prefix": "positive",
              "output_prefix": "positive_scores"
            },
            {
              "type": "einsum",
              "fst_prefix": "user",
              "snd_prefix": "negative",
              "operation": "bud,bnd->bn",
              "mask_prefix": "negative",
              "output_prefix": "negative_scores"
            },
            {
              "type": "unmask",
              "prefix": [
                "positive_scores",
                "negative_scores"
              ]
            }
          ]
        },
        "test": {
          "type": "composite",
          "encoders": [
            {
              "type": "einsum",
              "fst_prefix": "user",
              "snd_prefix": "candidates",
              "operation": "bud,bcd->bc",
              "mask_prefix": "candidates",
              "output_prefix": "scores"
            }
          ]
        }
      }
    ]
  },
  "loss": {
    "type": "bpr",
    "positive_prefix": "positive_scores",
    "negative_prefix": "negative_scores",
    "output_prefix": "loss"
  },
  "optimizer": {
    "type": "basic",
    "optimizer": {
      "type": "adam",
      "lr": 1e-4,
      "betas": [
        0.9,
        0.98
      ]
    },
    "clip_grad_threshold": 5.0
  },
  "callback": {
    "type": "composite",
    "callbacks": [
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "loss"
      },
      {
        "type": "validation",
        "on_step": 32,
        "pred_prefix": "scores",
        "labels_prefix": "labels",
        "metrics": {
          "ndcg@5": {
            "type": "ndcg",
            "k": 5
          },
          "recall@5": {
            "type": "recall",
            "k": 5
          }
        }
      }
    ]
  }
}
