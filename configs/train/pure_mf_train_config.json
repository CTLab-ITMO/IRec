{
  "experiment_name": "test_experiment",
  "train_epochs_num": 100,
  "dataset": {
    "type": "amazon",
    "path_to_data_dir": "../data/Beauty",
    "dataset_prefix": "Beauty",
    "min_sample_len": 5,
    "max_sample_len": 200,
    "validation_size": 0.1,
    "test_size": 0.1,
    "samplers": {
      "type": "next_item_prediction",
      "negative_sampler": {
        "type": "random",
        "sample_size": 99
      }
    }
  },
  "dataloader": {
    "train": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "amazon"
      },
      "drop_last": true,
      "shuffle": true
    },
    "validation": {
      "type": "torch",
      "batch_size": 256,
      "batch_processor": {
        "type": "amazon"
      },
      "drop_last": false,
      "shuffle": false
    }
  },
  "model": {
    "type": "feedforward",
    "projector": {
      "type": "basic",
      "embedding_dim": 256,
      "fields": [
        {
          "type": "user",
          "prefix": "user"
        },
        {
          "prefix": "positive"
        },
        {
          "prefix": "negative"
        },
        {
          "prefix": "candidates"
        }
      ]
    },
    "encoder": {
      "type": "train/test",
      "train": {
        "type": "composite",
        "encoders": [
          {
            "type": "einsum",
            "fst_prefix": "user",
            "snd_prefix": "positive",
            "operation": "bud,bpd->bp",
            "mask_prefix": "positive",
            "output_prefix": "positive_scores"
          },
          {
            "type": "einsum",
            "fst_prefix": "user",
            "snd_prefix": "negative",
            "operation": "bud,bnd->bn",
            "mask_prefix": "negative",
            "output_prefix": "negative_scores"
          },
          {
            "type": "unmask",
            "prefix": [
              "positive_scores",
              "negative_scores"
            ]
          }
        ]
      },
      "test": {
        "type": "composite",
        "encoders": [
          {
            "type": "einsum",
            "fst_prefix": "user",
            "snd_prefix": "candidates",
            "operation": "bud,bcd->bc",
            "mask_prefix": "candidates",
            "output_prefix": "scores"
          }
        ]
      }
    }
  },
  "loss": {
    "type": "bpr",
    "positive_prefix": "positive_scores",
    "negative_prefix": "negative_scores",
    "output_prefix": "loss"
  },
  "optimizer": {
    "type": "basic",
    "optimizer": {
      "type": "adam",
      "lr": 1e-4,
      "betas": [
        0.9,
        0.98
      ]
    },
    "clip_grad_threshold": 5.0
  },
  "callback": {
    "type": "composite",
    "callbacks": [
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "loss"
      },
      {
        "type": "validation",
        "on_step": 32,
        "pred_prefix": "scores",
        "labels_prefix": "labels",
        "metrics": {
          "ndcg@5": {
            "type": "ndcg",
            "k": 5
          },
          "recall@5": {
            "type": "recall",
            "k": 5
          }
        }
      }
    ]
  }
}
